<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_character"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="16dp"
        android:layout_margin="16dp"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <TextView
        android:id="@+id/name_character"
        app:layout_constraintTop_toTopOf="@id/image_character"
        app:layout_constraintStart_toEndOf="@id/image_character"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Name: Rick Sanchez"
        tools:textSize="16dp"
        tools:textStyle="normal"
        tools:background=""
        android:layout_margin="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/specie_character"
        tools:text="Specie: Human"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/name_character"
        app:layout_constraintStart_toStartOf="@id/name_character"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/gender_character"
        tools:text="Gender: Male"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/specie_character"
        app:layout_constraintStart_toStartOf="@id/specie_character"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>